# EditorConfig - Configuration cross-IDE
#
# EditorConfig aide à maintenir des styles de code cohérents
# entre différents éditeurs et IDE.
# @see https://editorconfig.org/
#
# Supporté nativement par la plupart des IDE ou via plugins :
# - VS Code: EditorConfig for VS Code
# - JetBrains: Support natif
# - Vim/Neovim: editorconfig-vim
# - Sublime Text: EditorConfig

# Fichier racine
root = true

# =============================================================================
# Configuration par défaut (tous les fichiers)
# =============================================================================
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# =============================================================================
# JavaScript / TypeScript / JSX / TSX
# =============================================================================
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
quote_type = single

# =============================================================================
# JSON
# =============================================================================
[*.json]
indent_size = 2

# package.json spécifique
[package.json]
indent_size = 2

# =============================================================================
# YAML
# =============================================================================
[*.{yml,yaml}]
indent_size = 2

# =============================================================================
# Markdown
# =============================================================================
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# =============================================================================
# CSS / SCSS / LESS
# =============================================================================
[*.{css,scss,sass,less}]
indent_size = 2

# =============================================================================
# HTML / Templates
# =============================================================================
[*.{html,htm,vue,svelte}]
indent_size = 2

# =============================================================================
# PHP
# =============================================================================
[*.php]
indent_size = 4

# =============================================================================
# Python
# =============================================================================
[*.py]
indent_size = 4
max_line_length = 88

# =============================================================================
# Go
# =============================================================================
[*.go]
indent_style = tab
indent_size = 4

# =============================================================================
# Makefiles
# =============================================================================
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# =============================================================================
# Shell scripts
# =============================================================================
[*.{sh,bash,zsh}]
indent_size = 2

# =============================================================================
# Configuration files
# =============================================================================
[.env*]
insert_final_newline = false

[*.{toml,ini,cfg}]
indent_size = 2

# =============================================================================
# Fichiers générés (ne pas modifier)
# =============================================================================
[*.min.{js,css}]
indent_style = ignore
insert_final_newline = ignore

[{pnpm-lock.yaml,package-lock.json,yarn.lock}]
indent_size = ignore
