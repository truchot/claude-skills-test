# Direction Technique Skill - Editor Configuration
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
# Markdown trailing spaces can be significant (line breaks)
trim_trailing_whitespace = false
max_line_length = off

[*.json]
indent_size = 2

[Makefile]
indent_style = tab
