{
  "name": "claude-learnings",
  "version": "1.0.0",
  "description": "Learning Loop validation and metrics for Claude Skills",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:learnings": "jest tests/validate-learnings.test.js",
    "test:hooks": "jest tests/validate-learning-hooks.test.js",
    "metrics": "node scripts/collect-learning-metrics.js summary",
    "metrics:json": "node scripts/collect-learning-metrics.js json"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "scripts/**/*.js",
      "tests/utils/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  }
}
